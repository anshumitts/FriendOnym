{
  "manifest_version": 2,
  "name": "FriendOnym",
  "version": "0.1",
  "background": {
    "scripts": ["background.js"]
  },
  "web_accessible_resources": ["books.xml"] ,
  "content_scripts": [
    {
      "matches": ["*://*.facebook.com/*"],
      "js": ["jquery.min.js", "content.js"]
    }
  ],
  "permissions":["*://*.facebook.com/*", "tabs","storage","https://ajax.googleapis.com/"],
  "browser_action": 
    {
     "default_icon": "icon.png",
     "default_popup": "makeMyXML.html"
    }
}
